<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10.0dip" >

    <View
        android:layout_width="0.0px"
        android:layout_height="0.0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/citylist_search"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/bg_citylist_search"
        android:drawableLeft="@mipmap/ic_citylist_search"
        android:drawablePadding="6.0dip"
        android:ellipsize="end"
        android:hint="@string/hotel_citylist_search_text"
        android:imeOptions="actionDone"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:singleLine="true"
        android:textAppearance="?android:textAppearance"
        android:textColorHint="#ffbfbfbf" />

    <TextView
        android:id="@+id/nocity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5.0dip"
        android:text="@string/citylist_nocity_text"
        android:textAppearance="?android:textAppearance"
        android:visibility="gone" />

</LinearLayout>